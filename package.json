        "node-fetch": "^2.6.1",
        "opusscript": "0.0.7",
        "sqlite3": "^5.0.1",
        "util": "^0.12.3",
        "ytdl-core": "^4.4.5"
    },
    "devDependencies": {
        "codecov": "^3.8.1",
        "docma": "^3.2.2",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1"
